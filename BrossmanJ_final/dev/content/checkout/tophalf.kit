  <section id="checkout">
    <div >
      <img id=checkouthero src="img/checkout/checkout.png" alt="checkout hero">
      <p >SHARK STRATOS x1 $499.99</p>

    </div>
    <div class="container">
   
      <div class="column">
        <div class="form-row">
          <input type="text" id="first-name" name="first-name" required placeholder="First Name">
        </div>
        <div class="form-row">
          <input type="text" id="last-name" name="last-name" required placeholder="Last Name">
        </div>
        <div class="form-row">
          <input type="email" id="email" name="email" required placeholder="Email Address">
        </div>
      </div>
      <div class="column">
        <div class="form-row">
          <input type="text" id="address" name="address" required placeholder="Address">
        </div>
        <div class="form-row">
          <input type="text" id="zip-code" name="zip-code" required placeholder="ZIP Code">
        </div>
        <div class="form-row">
          <input type="text" id="city" name="city" required placeholder="City">
        </div>
      </div>
    </div>
  </section>
  

