<section id="bottomcheckout">
  <div class="container">
    <div class="column">
      <form>
        <div class="input-field">
          <input
            type="text"
            id="card-number"
            name="card-number"
            placeholder="Card Number"
            required
          />
        </div>

        <div class="input-field">
          <input
            type="text"
            id="card-holder"
            name="card-holder"
            placeholder="Card Holder Name"
            required
          />
        </div>

        <div class="input-field">
          <input
            type="text"
            id="expiration"
            name="expiration"
            placeholder="Expiration (MM/YY)"
            required
          />
        </div>

        <div class="input-field">
          <input type="text" id="ccv" name="ccv" placeholder="CCV" required />
        </div>

        <a href="thankyou.html" class="button">CheckOut</a>
        <!-- <button class="button" type="submit">Place Order</button> -->
      </form>
    </div>

    <div class="column">
      <div></div>
    </div>
  </div>
</section>
